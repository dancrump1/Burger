<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        {{#each burgers}}
        {{#unless this.devoured}}
        <div>

          <p>{{this.burger_name}}</p>
          <form class="create-form" >
            <div class="form-group">
            </div>
            <button type="submit" class='burgerAvailable'data-id="{{this.id}}"> Remove: {{this.burger_name}}</button>
          </form>

        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col-sm-6">
        {{#each burgers}}
        {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col-sm-6">
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="name" name="burger_name" placeholder="Enter a burger here!">
      </div>
      <button type="submit" class="addBurgerButton">Add a burger!</button>
    </form>

  </div>
</div>
